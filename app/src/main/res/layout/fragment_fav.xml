<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/backGound"
    tools:context=".fragments.FavFragment">

    <TextView
        android:id="@+id/title_favorite"
        android:layout_width="match_parent"
        android:text="Favorite"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        style="@style/first_text"
        android:textSize="20dp"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardsearch"
        android:layout_below="@+id/title_favorite"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="15dp"
        style="@style/cardview"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchbar"
            android:padding="4dp"
            app:queryHint="Search"
            app:defaultQueryHint="Search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_below="@+id/cardsearch"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/no_result"
            android:text="No Favorite Movie"
            android:layout_centerInParent="true"
            style="@style/second_text"
            android:textSize="20dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/backGound">

    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                style="@style/cardview"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="50dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        style="@style/arrowback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:id="@+id/duration"
                android:layout_below="@+id/back"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/text_duration"
                    style="@style/first_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:rotation="-90"
                    android:text="2h 50m"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/text_duration"
                    android:layout_marginTop="13dp"
                    android:padding="3dp"
                    android:rotation="-90"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_baseline_schedule_24" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_below="@+id/duration"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/text_year"
                    style="@style/first_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:rotation="-90"
                    android:text="2013"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/text_year"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    android:padding="3dp"
                    android:rotation="-90"
                    android:src="@drawable/ic_baseline_calendar_today_24" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rate"
                android:layout_below="@+id/year"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="80dp">
                <TextView
                    android:id="@+id/text_rate"
                    android:text="8.0"
                    style="@style/first_text"
                    android:textSize="12dp"
                    android:rotation="-90"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/text_rate"
                    android:layout_marginTop="1dp"
                    android:rotation="-90"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_baseline_star_rate_24" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagecover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/customRoundedImageView"
                app:srcCompat="@drawable/moonlight" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                style="@style/first_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="50dp"
                android:text="Her"
                android:textSize="30dp" />
            <TextView
                android:id="@+id/director"
                android:text="Director"
                style="@style/second_text"
                android:textSize="17dp"
                android:layout_below="@+id/title"
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/genre1"
                android:layout_below="@+id/director"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                style="@style/cardview"
                app:cardCornerRadius="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Romantic"
                    android:padding="5dp"
                    style="@style/second_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/genre2"
                android:layout_below="@+id/director"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/genre1"
                android:layout_marginTop="20dp"
                style="@style/cardview"
                app:cardCornerRadius="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Drama"
                    android:padding="5dp"
                    style="@style/second_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/introduction"
                style="@style/first_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/genre1"
                android:layout_marginStart="35dp"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:text="Intoduction" />
            <TextView
                android:id="@+id/text_introduction"
                style="@style/second_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/introduction"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="Intoduction" />

<!--            <com.skyhope.showmoretextview.ShowMoreTextView-->
<!--                android:id="@+id/text_view_show_more"-->
<!--                style="@style/second_text"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/introduction"-->
<!--                android:layout_marginStart="35dp"-->
<!--                android:layout_marginEnd="40dp"-->
<!--                android:text="description" />-->
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout
                style="@style/gradient_watch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp">

                <ImageView
                    android:id="@+id/fav"
                    style="@style/fav_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp" />

                <RelativeLayout
                    android:id="@+id/btn"
                    android:layout_width="70dp"
                    android:layout_height="200dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_watch">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/regular"
                        android:rotation="-90"
                        android:text="Watch"
                        android:textColor="@color/bg_ligh"
                        android:textSize="24dp" />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>